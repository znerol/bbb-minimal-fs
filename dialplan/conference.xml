<include>
  <context name="conference">

    <extension name="bbb_dialin">
      <condition field="destination_number" expression="^dialin$">
        <action application="answer"/>
        <action application="sleep" data="500"/>
        <action application="play_and_get_digits" data="5 5 3 7000 # conference/conf-pin.wav ivr/ivr-that_was_an_invalid_entry.wav pin \d+"/>
        <action application="transfer" data="dialin_pin_test"/>
      </condition>
    </extension>

    <extension name="bbb_dialin_pin_test">
      <condition field="destination_number" expression="^dialin_pin_test$"/>
      <condition field="${conference ${pin} list}" expression="/sofia/g">
        <action application="transfer" data="${pin}"/>
      </condition>
    </extension>

    <extension name="bbb_echo_test">
      <condition field="destination_number" expression="^echo(\d{5,11})$">
        <action application="set" data="vbridge=$1"/>
        <action application="answer"/>
        <action application="bind_digit_action" data="echo_test,1,exec:break"/>
        <action application="sleep" data="500"/>
        <action application="echo"/>
        <action application="clear_digit_action" data="echo_test"/>
        <action application="transfer" data="$1"/>
      </condition>
    </extension>

    <extension name="bbb_conferences">
      <condition field="destination_number" expression="^(\d{5,11})$">
        <action application="jitterbuffer" data="$${conference_jitterbuffer}"/>
        <action application="answer"/>
        <action application="conference" data="$1@cdquality"/>
      </condition>
    </extension>

  </context>
</include>
